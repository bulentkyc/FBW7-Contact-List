<!DOCTYPE html>
<html lang="en">
{{>header}}

<style>
    body {
    background-color: #555;
    color: white;
}
h1 {
    margin-top: 10rem;
}
form {
    margin-bottom: 2rem;
}
.ul {
    border-top: 1px solid white;
    padding-top: 20px;
}

.li {
    padding-left: 5px;
    margin-bottom: 5px;
    list-style-type: none;
}
img{
    border-radius: 50%;
    margin-right: 10px;
    height: 42px;
    width: 42px;
}
a{
    color: white;
    font-weight: bold;
}
a:hover{
    color: #e3f2fd;
    font-weight: bold;
    text-decoration: none;
}

#footer{
    position: relative;
    left: 0;
    bottom: 0;
    width: 100%;
    background-color: gray;
    color: white;
    text-align: center;
}
</style>
<body>
    <div class="container">
            <h1 class="text-center">Enter your contact</h1>
            <form class="col-xs-12 col-md-6 mx-auto" action="/new-contact" method="POST" enctype="multipart/form-data">
                        <div class="input-group mb-1">
                            <div class="input-group-prepend">
                                <div class="input-group-text">...</div>
                            </div>
                            <input type="text" class="form-control" name="name" placeholder="Enter your contact's name">
                        </div>

                        <div class="input-group mb-1">
                            <div class="input-group-prepend">
                                <div class="input-group-text">@</div>
                            </div>
                            <input type="email" class="form-control" name="email" placeholder="Enter your contact's e-mail">
                        </div>

                        <div class="input-group  mb-1">
                            <label class="custom-file-label" for="avatar">Choose file</label>
                            <input type="file" class="custom-file-input" id="avatar" name="avatar" multiple="multiple">
                        </div>

                        <div class="input-group">
                            <button type="submit" class="btn btn-primary btn-block">Submit</button>
                        </div>
                    </form>
        <hr>

{{#each contactArr}}
        <div class="container row">
            <ul class="col-xs-12 col-md-6 mx-auto ul">
                <li class="li row">
                    <div class="float-left col-11">
                        <a href="#">
                            <img src="/uploads/{{this.avatar}}">
                                {{this.name}}
                            <div class="float-right">
                                {{this.email}}
                            </div>
                        </a>
                    </div>
                    <div class="float-right col-1">
                        <a href="#">‚ùå</a>
                    </div>
                </li>
            </ul>
        </div>
{{/each}}

    </div>
</body>
</html>